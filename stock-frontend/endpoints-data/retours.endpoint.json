{
  "endpoint": "/api/retour/liste",
  "method": "GET",
  "description": "Retrieve a paginated list of article returns (retours). Supports filtering by chantier (site) or specific article.",
  "parameters": {
    "query": {
      "chantierId": {
        "type": "number",
        "required": false,
        "description": "Filter returns by the ID (code) of the chantier."
      },
      "articleId": {
        "type": "number",
        "required": false,
        "description": "Filter returns that contain a specific article ID."
      },
      "page": {
        "type": "number",
        "required": false,
        "default": 1,
        "description": "The page number for pagination."
      }
    }
  },
  "schemas": {
    "input": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "type": "object",
      "properties": {
        "chantierId": { "type": "integer" },
        "articleId": { "type": "integer" },
        "page": { "type": "integer", "minimum": 1 }
      }
    },
    "output": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "type": "object",
      "properties": {
        "retours": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "integer" },
              "date": { "type": "string", "format": "date" },
              "status": {
                "type": "string",
                "enum": ["pending", "confirmed", "denied"]
              },
              "observation": { "type": ["string", "null"] },
              "chantier": {
                "type": "object",
                "description": "Full details of the associated chantier"
              },
              "items": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "integer" },
                    "quantite": { "type": "integer" },
                    "reason": { "type": "string" },
                    "article": {
                      "type": "object",
                      "description": "Full details of the article"
                    }
                  }
                }
              }
            }
          }
        },
        "count": {
          "type": "integer",
          "description": "Number of items in the current page"
        },
        "totalPages": { "type": "integer" },
        "lastPage": { "type": "boolean" }
      }
    }
  },
  "responses": {
    "200": {
      "description": "Successful retrieval of the list",
      "example": {
        "retours": [
          {
            "id": 1,
            "date": "2023-10-27",
            "status": "pending",
            "observation": "Excess material",
            "chantier": { "code": 101, "nom": "Chantier Alpha" },
            "items": [
              {
                "id": 5,
                "quantite": 10,
                "reason": "Not used",
                "article": { "id": 1, "nom": "Ciment" }
              }
            ]
          }
        ],
        "count": 1,
        "totalPages": 5,
        "lastPage": false
      }
    }
  }
}
